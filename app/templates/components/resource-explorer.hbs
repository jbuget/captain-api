<h2 class="panel__title">Resources</h2>

<section class="section-filter">
  <div class="resource-filter">
    <span class="resource-filter__icon">{{fa-icon "search"}}</span>
    {{input class="resource-filter__input" value=filter placeholder=filter}}
  </div>
</section>

<section class="section-list">

</section>
<ul class="resource-list">
  {{#each this.filteredResources as |resource|}}
    <li class="resource-item">
      <a class="resource-item__link" href="" {{action onSelectResource resource}}>
        <span class="resource-item__method resource-item__method--{{lowercase resource.fields.Method}}">{{resource.fields.Method}}</span>
        <span class="resource-item__name">{{resource.fields.Name}}</span>
      </a>
    </li>
  {{/each}}
</ul>
