<div class="panel__header">
  <div class="panel__header-left-column">
    <span class="panel__title">Response</span>
    {{#if command.response}}
      <span class="result-panel__duration">{{command.response.duration}}ms</span>
    {{/if}}
  </div>
</div>

<div class="panel__body">
  {{#if command.response}}

    <section class="result-panel__general">
      <div class="result-panel__request">
        <span class="result-panel__request-method">{{command.request.method}}</span>
        <span class="result-panel__request-url">{{command.request.httpRequest.url}}</span>
      </div>
      <div class="result-panel__status result-panel__status--{{this.responseStatusType}}">
        <span class="result-panel__status-code">{{command.response.status}}</span>
        <span class="result-panel__status-text">{{command.response.statusText}}</span>
      </div>
    </section>

    <section class="result-panel__response">
      <ResponsePanel @command={{command}}/>
    </section>

  {{/if}}
</div>