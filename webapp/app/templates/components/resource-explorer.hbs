<div class="panel__header">
  <div class="panel__header-left-column">
    <span class="panel__title">Resources</span>
  </div>
  <div class="panel__header-right-column">
    <button class="panel__header-action" title="Add new resource" {{action "newResource"}}>{{fa-icon "plus"}}</button>
    <button class="panel__header-action" title="Import resources" {{action (mut isShowingResourcesImportModal) true}}>{{fa-icon "file-import"}}</button>
    <button class="panel__header-action" title="Reload resources" {{action (action onReloadResources)}}>{{fa-icon "sync"}}</button>
  </div>
</div>

<div class="panel__body">
  <section class="section-filter">
    <div class="resource-filter">
      <span class="resource-filter__icon">{{fa-icon "search"}}</span>
      {{input class="resource-filter__input" value=filter placeholder=filter}}
    </div>
  </section>

  <section class="section-list">
    <ul class="resource-list">
      {{#each this.filteredResources as |resource|}}
        <li class="resource-item">
          <a class="resource-item__link" href="" {{action onSelectResource resource}}>
            <span class="resource-item__method resource-item__method--{{lowercase resource.method}}">{{resource.method}}</span>
            <span class="resource-item__name">{{resource.name}}</span>
          </a>
        </li>
      {{/each}}
    </ul>
  </section>
</div>

{{#if isShowingResourcesImportModal}}
  <ResourcesImportModal
    @onClose={{action (mut isShowingResourcesImportModal) false}}
    @onImport={{action "importResources"}}/>
{{/if}}

{{#if isShowingResourceEditionModal}}
  <ResourceEditionModal
    @resource={{selectedResource}}
    @onClose={{action (mut isShowingResourceEditionModal) false}}
    @onSave={{action "saveResource"}}/>
{{/if}}

